<%= form_for @todo do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.submit 'Create Todo' %>
<% end %>

<ul class='todos'>
  <% @todos.each do |todo| %>
    <li>
      <%= todo.title %>

      <% if !todo.complete? %>
        <%= link_to 'Mark complete', todo_completion_path(todo), method: :post %>
      <% else %>
        <%= link_to 'Mark incomplete', todo_completion_path(todo), method: :delete %>
      <% end %>
    </li>
  <% end %>
</ul>
